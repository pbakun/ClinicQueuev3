@model WebApp.Models.ViewModel.PatientViewModel
@{
    ViewData["Title"] = "System Kolejkowy";
}

<div class="backgroundWhite">


    <br />
    <header>
        <div>
            <img class="col-2" src="~/img/logo_NFZ.png" />
        </div>
    </header>

    <div class="row">
       
        <div class="container">
            <div class="text-secondary text-center font-weight-bolder" style="font-size: 40px" id="DoctorFullName">@Model.DoctorFullName</div>
        </div>
        <div class="container">
            <div class="text-dark text-center font-weight-light" style="font-size: 250px" id="QueueNo">@Model.QueueNoMessage</div>

        </div>

        <div class="container">
            <div class="col-3 offset-10">
                <img class="col-8" src="~/img/szybka_terapia_onkologiczna_CMYK_A4.jpg" />
            </div>
        </div>
    </div>

    

    <footer class="border-top footer fixed-bottom">
            <marquee  behavior="scroll" direction="left">
                <p class="text-info" style="font-size: 20px" id="additionalInfo">
                    @Model.QueueAdditionalInfo</p>
            </marquee>
    </footer>
</div>

<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/queueServiceSlave.js"></script>