@model WebApp.Models.Queue
@{
    ViewData["Title"] = "System Kolejkowy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

<div class="backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Kolejka</h2>
        </div>
    </div>

    <div class="text-hide" id="RoomNo">@Model.RoomNo</div>

    <form method="post">
        <div class="border-top border-dark">
            <br />
            <div class="row">
                <div class="col-2 offset-1 text-nowrap">
                    <a class="text-secondary">Obecny pacjent:</a>
                    <a class="text-left text-dark font-weight-bold" id="QueueNo">@Html.DisplayFor(m => m.QueueNoMessage)</a>

                </div>
                <div class="col-1">
                    <a class="btn btn-dark form-control text-light" id="PrevNo">Back</a>
                </div>
                <div class="col-1">
                    <a class="btn btn-dark form-control text-light" id="NextNo">Next</a>
                </div>
            </div>

            <div class="row">
                <div class="col-4 offset-1">
                    <a class="text-secondary">Nadpisz numer:</a>
                    <input class="text-dark border-dark" />
                </div>
            </div>
        </div>
    </form>


</div>


<script type="text/javascript">
    var roomNo = parseInt('@Model.RoomNo');
    var queueNo = parseInt('@Model.QueueNo');
    var id = parseInt('@Model.Id');
</script>

<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/queueServiceMaster.js"></script>
